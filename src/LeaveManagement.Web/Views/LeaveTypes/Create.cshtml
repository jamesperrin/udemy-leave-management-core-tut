@model LeaveManagement.Web.Models.LeaveTypeVM

@{
    ViewData["Title"] = "Create Leave Type";
}

<h1>Create Leave Type</h1>

<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultDays" class="control-label"></label>
                <input asp-for="DefaultDays" class="form-control" />
                <span asp-validation-for="DefaultDays" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" title="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-dark" title="Back to List">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
